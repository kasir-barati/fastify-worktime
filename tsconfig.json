{
    "extends": "fastify-tsconfig",
    "compilerOptions": {
        "outDir": "./build",
        "target": "es2018",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": ["index.d.ts", "node_modules/@types"]
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
